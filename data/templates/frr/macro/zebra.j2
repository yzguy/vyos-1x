{% macro zebra_config(proto, afi) %}
{{ 'no ' if proto.disable_forwarding is vyos_defined }}{{ afi }} forwarding
!
{% if proto.nht.no_resolve_via_default is vyos_defined %}
no {{ afi }} nht resolve-via-default
{% endif %}
!
{% if proto.protocol is vyos_defined %}
{%     for protocol_name, protocol_config in proto.protocol.items() %}
{%         if protocol_name is vyos_defined('ospfv3') %}
{%             set protocol_name = 'ospf6' %}
{%         endif %}
{{ afi }} protocol {{ protocol_name }} route-map {{ protocol_config.route_map }}
{%     endfor %}
{% endif %}
{% endmacro %}
